# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET      /cook/keyboard                           controllers.cook.CookSearchController.keyboard
POST     /cook/message                            controllers.cook.CookSearchController.message
GET      /flower/keyboard                           controllers.flower.FlowerSearchController.keyboard
POST     /flower/message                            controllers.flower.FlowerSearchController.message
GET      /bracken/keyboard                        controllers.bracken.BrackenController.keyboard
POST     /bracken/message                         controllers.bracken.BrackenController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
